@model OrderApp.Models.Order

<h2>Детали заказа</h2>

<div>
    <p><strong>Номер заказа:</strong> @Model.OrderNumber</p>
    <p><strong>Город отправителя:</strong> @Model.SenderCity</p>
    <p><strong>Адрес отправителя:</strong> @Model.SenderAddress</p>
    <p><strong>Город получателя:</strong> @Model.RecipientCity</p>
    <p><strong>Адрес получателя:</strong> @Model.RecipientAddress</p>
    <p><strong>Вес груза:</strong> @Model.CargoWeight</p>
    <p><strong>Дата забора груза:</strong> @Model.PickupDate.ToShortDateString()</p>
</div>

<a asp-action="Index" class="btn btn-primary">Назад к списку</a>
